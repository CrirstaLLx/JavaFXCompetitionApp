<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.skgottalent.HelloController">
   <Label fx:id="welcomeText" alignment="CENTER" text="Welcome to Slovakia Got Talent Game!" textAlignment="CENTER">
      <font>
         <Font size="28.0" />
      </font>
   </Label>
    <Button onAction="#onHelloButtonClick" text="Start Game">
      <font>
         <Font name="System Bold" size="21.0" />
      </font></Button>
   <Button mnemonicParsing="false" onAction="#onCloseButtonClick" prefHeight="45.0" prefWidth="140.0" text="Close">
      <font>
         <Font name="System Bold" size="21.0" />
      </font>
   </Button>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
